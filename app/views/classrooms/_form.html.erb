<%= form_with(model: classroom) do |form| %>
  <% if classroom.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

      <ul>
        <% classroom.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :class_type_id, "Class Type", style: "display: block" %>
    <%= form.collection_select :class_type_id, ClassType.not_archived, :id, :name, { include_blank: "-- Select Class Type --" } %>
  </div>

  <div>
    <%= form.label :room_id, "Room", style: "display: block" %>
    <%= form.collection_select :room_id, Room.not_archived, :id, :name, { include_blank: "-- Select Room --" } %>
  </div>

  <div>
    <%= form.label :teacher_id, "Teacher", style: "display: block" %>
    <%= form.collection_select :teacher_id, User.with_role(:teacher), :id, :email, { include_blank: "-- Select Teacher --" } %>
  </div>

  <div>
    <%= form.label :quarter_id, "Quarter", style: "display: block" %>
    <%= form.collection_select :quarter_id, Quarter.not_archived, :id, :name, { include_blank: "-- No Quarter --" }, { required: false } %>
  </div>

  <div>
    <%= form.label :is_archived, style: "display: block" %>
    <%= form.check_box :is_archived %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
