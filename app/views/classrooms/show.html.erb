<% content_for :title, @classroom.name %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="card-title mb-0"><%= @classroom.name %></h2>
        <div>
          <%= link_to "View Schedule", calendar_classroom_path(@classroom), class: "btn btn-primary me-2" %>
          <% if policy(@classroom).update? %>
            <%= link_to "Edit", edit_classroom_path(@classroom), class: "btn btn-outline-primary" %>
          <% end %>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-md-4">
          <p class="mb-1"><strong>Class Type:</strong></p>
          <p class="text-muted"><%= @classroom.class_type.name %></p>
        </div>
        <div class="col-md-4">
          <p class="mb-1"><strong>Room:</strong></p>
          <p class="text-muted"><%= @classroom.room.name %> (Capacity: <%= @classroom.room.capacity %>)</p>
        </div>
        <div class="col-md-4">
          <p class="mb-1"><strong>Quarter:</strong></p>
          <p class="text-muted">
            <%= @classroom.quarter.name %>
            <small>(<%= @classroom.quarter.start_date.strftime("%b %d") %> - <%= @classroom.quarter.end_date.strftime("%b %d, %Y") %>)</small>
          </p>
        </div>
        <div class="col-md-4">
          <p class="mb-1"><strong>Teacher:</strong></p>
          <p class="text-muted"><%= @classroom.teacher.user.full_name %></p>
        </div>
        <div class="col-md-4">
          <p class="mb-1"><strong>Status:</strong></p>
          <p>
            <% if @classroom.is_archived %>
              <span class="badge bg-secondary">Archived</span>
            <% else %>
              <span class="badge bg-success">Active</span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3 class="h5 mb-0">Students</h3>
          <small class="text-muted"><%= @classroom.students.not_archived.count %> active students</small>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Status</th>
                  <% if current_user.dean? %>
                    <th>Average Grade</th>
                  <% end %>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @classroom.students.includes(:user).not_archived.each do |student| %>
                  <tr>
                    <td><%= student.user.full_name %></td>
                    <td><%= student.user.email %></td>
                    <td>
                      <% if student.state == "active" %>
                        <span class="badge bg-success">Active</span>
                      <% else %>
                        <span class="badge bg-warning">Inactive</span>
                      <% end %>
                    </td>
                    <% if current_user.dean? %>
                      <td>
                        <% average = student.grades.not_archived.average(:grade)&.round(2) || 0 %>
                        <span class="<%= average >= 4 ? 'text-success' : 'text-danger' %>">
                          <%= average %>
                        </span>
                      </td>
                    <% end %>
                    <td class="text-end">
                      <%= link_to "View", student_path(student), class: "btn btn-sm btn-outline-primary" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-header">
          <h3 class="h5 mb-0">Quick Links</h3>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <%= link_to calendar_classroom_path(@classroom), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
              View Schedule
              <i class="bi bi-calendar-week"></i>
            <% end %>
            <% if policy(@classroom).update? %>
              <%= link_to edit_classroom_path(@classroom), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                Edit Classroom
                <i class="bi bi-pencil"></i>
              <% end %>
            <% end %>
            <%= link_to classrooms_path, class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
              All Classrooms
              <i class="bi bi-grid"></i>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-header">
          <h3 class="h5 mb-0">Statistics</h3>
        </div>
        <div class="card-body">
          <ul class="list-unstyled mb-0">
            <li class="mb-2 d-flex justify-content-between">
              <span>Total Students:</span>
              <strong><%= @classroom.students.not_archived.count %></strong>
            </li>
            <li class="mb-2 d-flex justify-content-between">
              <span>Active Students:</span>
              <strong><%= @classroom.students.not_archived.where(state: :active).count %></strong>
            </li>
            <li class="mb-2 d-flex justify-content-between">
              <span>Room Capacity:</span>
              <strong><%= @classroom.room.capacity %></strong>
            </li>
            <li class="mb-2 d-flex justify-content-between">
              <span>Weekly Classes:</span>
              <strong><%= @classroom.courses.not_archived.count %></strong>
            </li>
            <% if current_user.dean? %>
              <li class="mb-2 d-flex justify-content-between">
                <span>Class Average:</span>
                <strong>
                  <% class_average = @classroom.students.not_archived.joins(:grades).where(grades: { is_archived: false }).average('grades.grade')&.round(2) || 0 %>
                  <span class="<%= class_average >= 4 ? 'text-success' : 'text-danger' %>">
                    <%= class_average %>
                  </span>
                </strong>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <% if current_user.dean? && !@classroom.is_archived %>
        <div class="card">
          <div class="card-header">
            <h3 class="h5 mb-0">Promote Class</h3>
          </div>
          <div class="card-body">
            <p class="text-muted mb-3">
              <strong>Note:</strong> Only students with an average grade of 4.0 or higher will be promoted. 
              Students with averages below 4.0 will remain in this classroom.
            </p>
            
            <% promoted_students = @classroom.students.not_archived.select do |student| 
              avg = student.grades.not_archived.average(:grade)&.round(2) || 0
              avg >= 4
            end %>
            
            <% if promoted_students.any? %>
              <div class="alert alert-info mb-3">
                <h6 class="alert-heading">Eligible for promotion (<%= promoted_students.size %> students):</h6>
                <ul class="mb-0 small">
                  <% promoted_students.each do |student| %>
                    <li><%= student.user.full_name %> - Average: <%= (student.grades.not_archived.average(:grade) || 0).round(2) %></li>
                  <% end %>
                </ul>
              </div>
            <% else %>
              <div class="alert alert-warning mb-3">
                No students in this class have an average grade of 4.0 or higher.
              </div>
            <% end %>
            
            <%= form_with(url: promote_classroom_path(@classroom), method: :post, class: "needs-validation", data: { turbo: false }) do |f| %>
              <div class="mb-3">
                <%= f.label :new_classroom_id, "New Classroom", class: "form-label" %>
                <%= f.collection_select :new_classroom_id, 
                    Classroom.not_archived.where.not(id: @classroom.id)
                    .where(class_type: @classroom.class_type)
                    .includes(:room, :teacher, :quarter)
                    .order(:name),
                    :id,
                    ->(c) { "#{c.name} (#{c.room.name}) - #{c.quarter.name}" },
                    { prompt: "Select new classroom..." },
                    { class: "form-select" } %>
              </div>
              <%= f.submit "Promote Class", class: "btn btn-primary w-100", 
                  data: { turbo_confirm: "Are you sure you want to promote qualified students? Only students with an average of 4.0 or higher will be moved." },
                  disabled: promoted_students.empty? %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
