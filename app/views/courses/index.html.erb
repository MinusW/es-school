<p style="color: green"><%= notice %></p>

<% content_for :title, "Courses" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Courses</h1>
    <% if policy(Course).create? %>
      <%= link_to new_course_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg"></i> New Course
      <% end %>
    <% end %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Module</th>
              <th>Teacher</th>
              <th>Classroom</th>
              <th>Schedule</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.theme.module_name %></td>
                <td><%= course.teacher.user.full_name %></td>
                <td><%= course.classroom.name %></td>
                <td>
                  <%= course.weekday.titleize %> <%= course.start_time.strftime("%H:%M") %> - <%= course.end_time.strftime("%H:%M") %>
                </td>
                <td>
                  <% if course.is_archived %>
                    <span class="badge bg-secondary">Archived</span>
                  <% else %>
                    <span class="badge bg-success">Active</span>
                  <% end %>
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <%= link_to course_path(course), class: "btn btn-outline-primary btn-sm" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    
                    <% if policy(course).update? %>
                      <%= link_to edit_course_path(course), class: "btn btn-outline-secondary btn-sm" do %>
                        <i class="bi bi-pencil"></i>
                      <% end %>
                    <% end %>

                    <% if policy(course).destroy? && !course.is_archived %>
                      <%= button_to course_path(course), 
                          method: :delete, 
                          class: "btn btn-outline-danger btn-sm",
                          form: { data: { turbo_confirm: "Are you sure you want to archive this course?" } } do %>
                        <i class="bi bi-archive"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
