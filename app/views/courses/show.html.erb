<% content_for :title, @course.theme.module_name %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
              <h1 class="h3 mb-0">Course Details</h1>
              <% if @course.is_archived %>
                <span class="badge bg-secondary">Archived</span>
              <% else %>
                <span class="badge bg-success">Active</span>
              <% end %>
            </div>
            <%= link_to courses_path, class: "btn btn-outline-secondary btn-sm" do %>
              <i class="bi bi-arrow-left"></i> Back to Courses
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Module</h6>
                <p class="mb-0">
                  <i class="bi bi-book text-primary"></i>
                  <%= @course.theme.module_name %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Teacher</h6>
                <p class="mb-0">
                  <i class="bi bi-person text-primary"></i>
                  <%= link_to @course.teacher.user.full_name, teacher_path(@course.teacher), class: "text-decoration-none" %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Classroom</h6>
                <p class="mb-0">
                  <i class="bi bi-building text-primary"></i>
                  <%= link_to @course.classroom.name, classroom_path(@course.classroom), class: "text-decoration-none" %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Schedule</h6>
                <p class="mb-0">
                  <i class="bi bi-clock text-primary"></i>
                  <%= @course.weekday.titleize %> <%= @course.start_time.strftime("%H:%M") %> - <%= @course.end_time.strftime("%H:%M") %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Students</h6>
                <p class="mb-0">
                  <i class="bi bi-people text-primary"></i>
                  <%= pluralize(@course.classroom.students.not_archived.count, 'student') %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Status</h6>
                <p class="mb-0">
                  <i class="bi bi-info-circle text-primary"></i>
                  <%= @course.is_archived ? 'Archived' : 'Active' %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-white">
          <div class="d-flex gap-2">
            <% if policy(@course).update? %>
              <%= link_to edit_course_path(@course), class: "btn btn-outline-secondary" do %>
                <i class="bi bi-pencil"></i> Edit Course
              <% end %>
            <% end %>

            <% if policy(@course).destroy? && !@course.is_archived %>
              <%= button_to course_path(@course), 
                  method: :delete, 
                  class: "btn btn-outline-danger",
                  form: { data: { turbo_confirm: "Are you sure you want to archive this course?" } } do %>
                <i class="bi bi-archive"></i> Archive Course
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
