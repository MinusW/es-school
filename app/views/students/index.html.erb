<p style="color: green"><%= notice %></p>

<% content_for :title, "Students" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Students</h1>
    <% if policy(Student).create? %>
      <%= link_to new_student_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg"></i> New Student
      <% end %>
    <% end %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Class</th>
              <th>Status</th>
              <% if current_user.dean? || current_user.teacher? %>
                <th>Actions</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td><%= student.user.full_name %></td>
                <td><%= student.user.email %></td>
                <td><%= student.classroom.name %></td>
                <td>
                  <% if student.is_archived %>
                    <span class="badge bg-secondary">Archived</span>
                  <% else %>
                    <span class="badge bg-success">Active</span>
                  <% end %>
                </td>
                <% if current_user.dean? || current_user.teacher? %>
                  <td>
                    <div class="btn-group">
                      <% if current_user.dean? %>
                        <% if policy(student).show? %>
                          <%= link_to student_path(student), class: "btn btn-sm btn-outline-primary" do %>
                            <i class="bi bi-eye"></i>
                          <% end %>
                        <% end %>
                        
                        <% if policy(student).update? %>
                          <%= link_to edit_student_path(student), class: "btn btn-sm btn-outline-secondary" do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                        <% end %>

                        <% if policy(student).destroy? && !student.is_archived %>
                          <%= button_to student_path(student), 
                              method: :delete, 
                              class: "btn btn-sm btn-outline-danger",
                              form: { data: { turbo_confirm: "Are you sure you want to archive this student?" } } do %>
                            <i class="bi bi-archive"></i>
                          <% end %>
                        <% end %>

                        <% if policy(student).generate_pdf? %>
                          <%= link_to generate_pdf_student_path(student, format: :pdf), 
                              class: "btn btn-sm btn-outline-info", 
                              target: "_blank" do %>
                            <i class="bi bi-file-pdf"></i>
                          <% end %>
                        <% end %>
                      <% elsif current_user.teacher? %>
                        <%= link_to student_path(student), class: "btn btn-sm btn-outline-primary" do %>
                          <i class="bi bi-eye"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
