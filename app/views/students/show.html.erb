<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="card-title mb-0"><%= @student.user.full_name %></h2>
        <div>
          <% if current_user.dean? || (current_user.student? && current_user.students.include?(@student)) %>
            <%= link_to generate_pdf_student_path(@student, format: :pdf), class: "btn btn-outline-primary me-2", target: "_blank" do %>
              <i class="bi bi-file-pdf"></i> Generate PDF
            <% end %>
          <% end %>
          <% if policy(@student).update? %>
            <%= link_to "Edit", edit_student_path(@student), class: "btn btn-outline-primary" %>
          <% end %>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-md-4">
          <p class="mb-1"><strong>Email:</strong></p>
          <p class="text-muted"><%= @student.user.email %></p>
        </div>
        <div class="col-md-4">
          <p class="mb-1"><strong>Class:</strong></p>
          <p class="text-muted"><%= @student.classroom.name %></p>
        </div>
        <div class="col-md-4">
          <p class="mb-1"><strong>Status:</strong></p>
          <p>
            <% if @student.is_archived %>
              <span class="badge bg-secondary">Archived</span>
            <% else %>
              <span class="badge bg-success">Active</span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3 class="h5 mb-0">Grades by Subject</h3>
          <div>
            <small class="text-muted me-3"><%= @student.grades.not_archived.count %> grades total</small>
            <% if (current_user.teacher? || current_user.dean?) && policy(Grade).create? %>
              <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addGradeModal">
                <i class="bi bi-plus-circle"></i> Add Grade
              </button>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <% grades_by_theme = @student.grades.not_archived.includes(:course).group_by { |g| g.course.theme } %>
          <% grades_by_theme.each do |theme, grades| %>
            <div class="mb-4">
              <h4 class="h6 mb-3"><%= theme.module_name %></h4>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Grade</th>
                      <th>Teacher</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% grades.sort_by(&:grading_date).reverse.each do |grade| %>
                      <tr>
                        <td><%= grade.grading_date.strftime("%b %d, %Y") %></td>
                        <td>
                          <span class="badge <%= grade.grade >= 4.0 ? 'bg-success' : 'bg-danger' %>">
                            <%= grade.grade %>
                          </span>
                        </td>
                        <td><%= grade.teacher.user.full_name %></td>
                      </tr>
                    <% end %>
                    <tr class="table-light">
                      <td><strong>Average</strong></td>
                      <td colspan="2">
                        <% avg = grades.sum(&:grade) / grades.size %>
                        <strong>
                          <span class="badge <%= avg >= 4.0 ? 'bg-success' : 'bg-danger' %>">
                            <%= avg.round(1) %>
                          </span>
                        </strong>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card mb-4">
        <div class="card-header">
          <h3 class="h5 mb-0">Summary</h3>
        </div>
        <div class="card-body">
          <ul class="list-unstyled mb-0">
            <li class="mb-2 d-flex justify-content-between">
              <span>Total Grades:</span>
              <strong><%= @student.grades.not_archived.count %></strong>
            </li>
            <li class="mb-2 d-flex justify-content-between">
              <span>Overall Average:</span>
              <% all_grades = @student.grades.not_archived %>
              <% overall_average = all_grades.any? ? (all_grades.sum(&:grade) / all_grades.size).round(1) : nil %>
              <strong>
                <span class="badge <%= overall_average && overall_average >= 4.0 ? 'bg-success' : 'bg-danger' %>">
                  <%= overall_average || 'N/A' %>
                </span>
              </strong>
            </li>
            <li class="mb-2 d-flex justify-content-between">
              <span>Subjects:</span>
              <strong><%= @student.grades.not_archived.includes(:course).map { |g| g.course.theme }.uniq.count %></strong>
            </li>
            <li class="d-flex justify-content-between">
              <span>Latest Grade:</span>
              <% latest_grade = @student.grades.not_archived.order(grading_date: :desc).first %>
              <strong>
                <% if latest_grade %>
                  <span class="badge <%= latest_grade.grade >= 4.0 ? 'bg-success' : 'bg-danger' %>">
                    <%= latest_grade.grade %>
                  </span>
                  <small class="text-muted ms-1">(<%= latest_grade.grading_date.strftime("%b %d") %>)</small>
                <% else %>
                  N/A
                <% end %>
              </strong>
            </li>
          </ul>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h3 class="h5 mb-0">Quick Links</h3>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <%= link_to classroom_path(@student.classroom), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
              View Class
              <i class="bi bi-people"></i>
            <% end %>
            <%= link_to calendar_classroom_path(@student.classroom), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
              View Schedule
              <i class="bi bi-calendar-week"></i>
            <% end %>
            <% if policy(@student).update? %>
              <%= link_to edit_student_path(@student), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                Edit Profile
                <i class="bi bi-pencil"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if (current_user.teacher? || current_user.dean?) && policy(Grade).create? %>
  <!-- Add Grade Modal -->
  <div class="modal fade" id="addGradeModal" tabindex="-1" aria-labelledby="addGradeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addGradeModalLabel">Add New Grade</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with(model: Grade.new, class: "needs-validation", data: { turbo: false }) do |f| %>
          <div class="modal-body">
            <%= f.hidden_field :student_id, value: @student.id %>
            <%= f.hidden_field :teacher_id, value: current_user.id %>
            
            <div class="mb-3">
              <%= f.label :course_id, "Course", class: "form-label" %>
              <%= f.collection_select :course_id,
                  if current_user.dean?
                    Course.not_archived
                      .where(classroom: @student.classroom)
                      .includes(:theme, :teacher)
                      .order('themes.module_name')
                  else
                    Course.not_archived
                      .where(classroom: @student.classroom)
                      .where(teacher: current_user)
                      .includes(:theme)
                      .order('themes.module_name')
                  end,
                  :id,
                  ->(c) { 
                    if current_user.dean?
                      "#{c.theme.module_name} (#{c.weekday.titleize} #{c.start_time.strftime('%H:%M')}) - #{c.teacher.user.full_name}"
                    else
                      "#{c.theme.module_name} (#{c.weekday.titleize} #{c.start_time.strftime('%H:%M')})"
                    end
                  },
                  { prompt: "Select course..." },
                  { class: "form-select", required: true } %>
            </div>

            <div class="mb-3">
              <%= f.label :grade, "Grade", class: "form-label" %>
              <%= f.number_field :grade,
                  class: "form-control",
                  step: "0.1",
                  min: "0",
                  max: "6",
                  required: true %>
              <div class="form-text">Enter a grade between 0 and 6</div>
            </div>

            <div class="mb-3">
              <%= f.label :grading_date, "Date", class: "form-label" %>
              <%= f.date_field :grading_date,
                  class: "form-control",
                  value: Date.current,
                  required: true %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit "Add Grade", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
