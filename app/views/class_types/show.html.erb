<% content_for :title, @class_type.name %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0"><%= @class_type.name %></h1>
            <% if @class_type.is_archived %>
              <span class="badge bg-secondary">Archived</span>
            <% else %>
              <span class="badge bg-success">Active</span>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Name</h6>
                <p class="mb-0">
                  <i class="bi bi-tag text-primary"></i>
                  <%= @class_type.name %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Status</h6>
                <p class="mb-0">
                  <i class="bi bi-info-circle text-primary"></i>
                  <%= @class_type.is_archived ? "Archived" : "Active" %>
                </p>
              </div>
            </div>

            <div class="col-12">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Description</h6>
                <p class="mb-0">
                  <i class="bi bi-card-text text-primary"></i>
                  <%= @class_type.description %>
                </p>
              </div>
            </div>
          </div>

          <div class="mt-4">
            <h5 class="mb-3">Active Classes</h5>
            <% if @class_type.classrooms.not_archived.any? %>
              <div class="list-group">
                <% @class_type.classrooms.not_archived.each do |classroom| %>
                  <%= link_to classroom_path(classroom), class: "list-group-item list-group-item-action" do %>
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1"><%= classroom.name %></h6>
                      <small class="text-muted">
                        <%= pluralize(classroom.students.not_archived.count, 'student') %>
                      </small>
                    </div>
                    <p class="mb-1">
                      <i class="bi bi-person text-primary"></i>
                      <%= classroom.teacher&.user&.full_name || "No teacher assigned" %>
                    </p>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted">No active classes of this type.</p>
            <% end %>
          </div>
        </div>
        <div class="card-footer bg-white">
          <div class="d-flex gap-2">
            <% if policy(@class_type).update? %>
              <%= link_to edit_class_type_path(@class_type), class: "btn btn-outline-primary" do %>
                <i class="bi bi-pencil"></i> Edit Class Type
              <% end %>
            <% end %>

            <% if policy(@class_type).destroy? && !@class_type.is_archived %>
              <%= button_to class_type_path(@class_type), 
                  method: :delete, 
                  class: "btn btn-outline-danger",
                  form: { data: { turbo_confirm: "Are you sure you want to archive this class type?" } } do %>
                <i class="bi bi-archive"></i> Archive Class Type
              <% end %>
            <% end %>

            <%= link_to class_types_path, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-arrow-left"></i> Back to Class Types
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
