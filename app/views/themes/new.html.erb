<% content_for :title, "New Theme" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">New Theme</h1>
            <%= link_to themes_path, class: "btn btn-outline-secondary btn-sm" do %>
              <i class="bi bi-arrow-left"></i> Back to Themes
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <%= render "form", theme: @theme %>
        </div>
      </div>
    </div>
  </div>
</div>
