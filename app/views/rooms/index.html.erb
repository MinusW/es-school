<p style="color: green"><%= notice %></p>

<% content_for :title, "Rooms" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Rooms</h1>
    <% if policy(Room).create? %>
      <%= link_to new_room_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg"></i> New Room
      <% end %>
    <% end %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @rooms.each do |room| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <h5 class="card-title mb-0"><%= room.name %></h5>
              <% if room.is_archived %>
                <span class="badge bg-secondary">Archived</span>
              <% else %>
                <span class="badge bg-success">Active</span>
              <% end %>
            </div>
            
            <div class="mb-3">
              <p class="card-text mb-1">
                <i class="bi bi-building text-primary"></i>
                <%= room.building %>
              </p>
              <p class="card-text mb-1">
                <i class="bi bi-layers text-primary"></i>
                Floor <%= room.floor %>
              </p>
              <p class="card-text">
                <i class="bi bi-people text-primary"></i>
                Capacity: <%= room.capacity %> people
              </p>
            </div>

            <div class="d-flex gap-2">
              <%= link_to room_path(room), class: "btn btn-outline-primary btn-sm" do %>
                <i class="bi bi-eye"></i> View
              <% end %>
              
              <% if policy(room).update? %>
                <%= link_to edit_room_path(room), class: "btn btn-outline-secondary btn-sm" do %>
                  <i class="bi bi-pencil"></i> Edit
                <% end %>
              <% end %>

              <% if policy(room).destroy? && !room.is_archived %>
                <%= button_to room_path(room), 
                    method: :delete, 
                    class: "btn btn-outline-danger btn-sm",
                    form: { data: { turbo_confirm: "Are you sure you want to archive this room?" } } do %>
                  <i class="bi bi-archive"></i> Archive
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
