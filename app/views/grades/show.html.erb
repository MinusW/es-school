<% content_for :title, "Grade Details" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
              <h1 class="h3 mb-0">Grade Details</h1>
              <% if @grade.is_archived %>
                <span class="badge bg-secondary">Archived</span>
              <% else %>
                <span class="badge bg-success">Active</span>
              <% end %>
            </div>
            <%= link_to grades_path, class: "btn btn-outline-secondary btn-sm" do %>
              <i class="bi bi-arrow-left"></i> Back to Grades
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Student</h6>
                <p class="mb-0">
                  <i class="bi bi-person text-primary"></i>
                  <%= @grade.student.user.full_name %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Teacher</h6>
                <p class="mb-0">
                  <i class="bi bi-person-badge text-primary"></i>
                  <%= @grade.teacher.user.full_name %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Course</h6>
                <p class="mb-0">
                  <i class="bi bi-book text-primary"></i>
                  <%= @grade.course.theme.module_name %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Grade</h6>
                <p class="mb-0">
                  <i class="bi bi-star text-primary"></i>
                  <%= @grade.grade %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Grading Date</h6>
                <p class="mb-0">
                  <i class="bi bi-calendar text-primary"></i>
                  <%= @grade.grading_date.strftime("%B %d, %Y") %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Status</h6>
                <p class="mb-0">
                  <i class="bi bi-info-circle text-primary"></i>
                  <%= @grade.is_archived ? "Archived" : "Active" %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-white">
          <div class="d-flex gap-2">
            <% if policy(@grade).update? %>
              <%= link_to edit_grade_path(@grade), class: "btn btn-outline-primary" do %>
                <i class="bi bi-pencil"></i> Edit Grade
              <% end %>
            <% end %>

            <% if policy(@grade).destroy? && !@grade.is_archived %>
              <%= button_to grade_path(@grade), 
                  method: :delete, 
                  class: "btn btn-outline-danger",
                  form: { data: { turbo_confirm: "Are you sure you want to archive this grade?" } } do %>
                <i class="bi bi-archive"></i> Archive Grade
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
