<p style="color: green"><%= notice %></p>

<% content_for :title, "Grades" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Grades</h1>
    <% if policy(Grade).create? %>
      <%= link_to new_grade_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-lg"></i> New Grade
      <% end %>
    <% end %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Student</th>
              <th>Course</th>
              <th>Teacher</th>
              <th>Grade</th>
              <th>Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @grades.each do |grade| %>
              <tr>
                <td><%= grade.student.user.full_name %></td>
                <td><%= grade.course.theme.module_name %></td>
                <td><%= grade.teacher.user.full_name %></td>
                <td><%= grade.grade %></td>
                <td><%= grade.grading_date.strftime("%B %d, %Y") %></td>
                <td>
                  <% if grade.is_archived %>
                    <span class="badge bg-secondary">Archived</span>
                  <% else %>
                    <span class="badge bg-success">Active</span>
                  <% end %>
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <%= link_to grade_path(grade), class: "btn btn-outline-primary btn-sm" do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                    
                    <% if policy(grade).update? %>
                      <%= link_to edit_grade_path(grade), class: "btn btn-outline-secondary btn-sm" do %>
                        <i class="bi bi-pencil"></i>
                      <% end %>
                    <% end %>

                    <% if policy(grade).destroy? && !grade.is_archived %>
                      <%= button_to grade_path(grade), 
                          method: :delete, 
                          class: "btn btn-outline-danger btn-sm",
                          form: { data: { turbo_confirm: "Are you sure you want to archive this grade?" } } do %>
                        <i class="bi bi-archive"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
