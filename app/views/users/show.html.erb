<% content_for :title, @user.full_name %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0"><%= @user.full_name %></h1>
            <% if @user.is_archived %>
              <span class="badge bg-secondary">Archived</span>
            <% else %>
              <span class="badge bg-success">Active</span>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Email</h6>
                <p class="mb-0">
                  <i class="bi bi-envelope text-primary"></i>
                  <%= @user.email %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Phone</h6>
                <p class="mb-0">
                  <i class="bi bi-telephone text-primary"></i>
                  <%= @user.phone %>
                </p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Roles</h6>
                <div class="d-flex gap-2">
                  <% @user.roles.each do |role| %>
                    <% badge_class = case role.name
                       when "dean" then "bg-primary"
                       when "teacher" then "bg-info"
                       when "student" then "bg-success"
                       end %>
                    <span class="badge <%= badge_class %>">
                      <%= role.name.humanize %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 border rounded">
                <h6 class="text-muted mb-2">Address</h6>
                <% if @user.address %>
                  <p class="mb-0">
                    <i class="bi bi-geo-alt text-primary"></i>
                    <%= link_to @user.address.full_address, @user.address, class: "text-decoration-none" %>
                  </p>
                <% else %>
                  <p class="mb-0 text-muted">
                    <i class="bi bi-geo-alt text-primary"></i>
                    No address assigned
                  </p>
                <% end %>
              </div>
            </div>
          </div>

          <% if @user.has_role?(:teacher) && @user.teacher %>
            <div class="mt-4">
              <h5 class="mb-3">Current Classes</h5>
              <% if @user.teacher.classrooms.not_archived.any? %>
                <div class="list-group">
                  <% @user.teacher.classrooms.not_archived.each do |classroom| %>
                    <%= link_to classroom_path(classroom), class: "list-group-item list-group-item-action" do %>
                      <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1"><%= classroom.name %></h6>
                        <small class="text-muted">
                          <%= pluralize(classroom.students.not_archived.count, 'student') %>
                        </small>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted">No active classes assigned.</p>
              <% end %>
            </div>
          <% end %>

          <% if @user.has_role?(:student) && @user.students.any? %>
            <div class="mt-4">
              <h5 class="mb-3">Enrolled Classes</h5>
              <div class="list-group">
                <% @user.students.not_archived.each do |student| %>
                  <%= link_to classroom_path(student.classroom), class: "list-group-item list-group-item-action" do %>
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1"><%= student.classroom.name %></h6>
                      <small class="text-muted">
                        <%= student.classroom.teacher&.user&.full_name || "No teacher assigned" %>
                      </small>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="card-footer bg-white">
          <div class="d-flex gap-2">
            <% if policy(@user).update? %>
              <%= link_to edit_user_path(@user), class: "btn btn-outline-primary" do %>
                <i class="bi bi-pencil"></i> Edit User
              <% end %>
            <% end %>

            <% if policy(@user).destroy? && !@user.is_archived %>
              <%= button_to user_path(@user), 
                  method: :delete, 
                  class: "btn btn-outline-danger",
                  form: { data: { turbo_confirm: "Are you sure you want to archive this user?" } } do %>
                <i class="bi bi-archive"></i> Archive User
              <% end %>
            <% end %>

            <%= link_to users_path, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-arrow-left"></i> Back to Users
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 